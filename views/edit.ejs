<div class="container col-sm-6" style="margin-top: 20px;background-color: beige;padding: 30px  50px;border-radius: 20px;font-family: 'Charmonman', cursive;">
    <h3 class="text-center" style="font-family: 'Charmonman', cursive;">Create New Blog</h3>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit Post</div>
        <form class="ui form" action="/blogs/edit/<%=blogs._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" value="<%= blogs.title %>" name='title'>
            </div>
            <div class="field">
                <label>Post Content</label>
                <textarea name="description"><%= blogs.description %></textarea>
            </div>
            <button class="ui big violet basic button">Update Post</button>
        </form>
    </div>
